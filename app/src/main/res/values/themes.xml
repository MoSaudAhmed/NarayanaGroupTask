<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NarayanaGroupTask" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="HomeCardStyle">
        <item name="cardElevation">4dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:padding">5dp</item>
        <item name="cardCornerRadius">5dp</item>
    </style>

    <style name="HomeTextStyleBold" parent="Widget.AppCompat.TextView">
        <item name="android:ellipsize">end</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="HomeTextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/black</item>
    </style>
</resources>